        <Button fx:id="moveButton" text="Move"  onAction="#handleMoveClick" disable="true" style="-fx-border-color: #454242; -fx-border-width: 3; -fx-border-style: solid"/>
    </HBox>
    <GridPane fx:id="boardGrid"/>

</VBox>
