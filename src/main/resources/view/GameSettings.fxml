<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Kasztany.Turtles.controller.GameSettings"
      spacing="10">
    <HBox alignment="CENTER">
        <Text>Number Of Players</Text>
        <TextField fx:id="numberOfPlayers" text="4"/>
    </HBox>
    <HBox alignment="CENTER">
        <Text>Board Name</Text>
        <TextField fx:id="boardName" text="map1"/>
    </HBox>
    <HBox alignment="CENTER">
        <Text fx:id="errorMessage" fill="#ff0000" ></Text>
    </HBox>
    <HBox alignment="CENTER">
        <Button text="START" onAction="#handleStartClick"/>
    </HBox>
</VBox>
